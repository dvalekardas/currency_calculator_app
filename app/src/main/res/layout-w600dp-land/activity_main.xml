<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/baseCurrencyText"
                android:layout_width="wrap_content"
                android:layout_height="125sp"
                tools:text="EUR"
                android:gravity="center|start"
                android:textSize="50sp"
                android:padding="10dp" />
            <TextView
                android:maxLines="2"
                android:autoSizeTextType="uniform"
                tools:text="25.000,23"
                android:layout_weight = "2"
                android:id="@+id/inputText"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="125sp"
                android:gravity="center|end"
                android:textSize="50sp"
                android:padding="10dp" />
            <ImageView
                app:srcCompat="@drawable/ic_baseline_backspace_24"
                android:id="@+id/backspace"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center|end"
                android:padding="10dp"
                android:onClick="onBackspace"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/conversionCurrencyText"
                android:layout_width="wrap_content"
                android:layout_height="125sp"
                tools:text="USD"
                android:gravity="center|start"
                android:textSize="50sp"
                android:padding="10dp" />
            <TextView
                android:id="@+id/outputText"
                android:maxLines="2"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="125sp"
                android:layout_weight = "2"
                tools:text="24.401,22"
                android:gravity="center|end"
                android:textSize="50sp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonSwap"
                android:backgroundTint="@color/orange"
                android:text="SWAP"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                />
            <Button
                android:id="@+id/buttonConvert"
                android:backgroundTint="@color/orange"
                android:text="CONVERT"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button7"
                android:text="7"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/button8"
                android:text="8"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/button9"
                android:text="9"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />

            <Button
                android:id="@+id/buttonDivide"
                android:backgroundTint="@color/teal_200"

                android:text="/"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onOperator"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button4"
                android:text="4"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/button5"
                android:text="5"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/button6"
                android:text="6"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />

            <Button
                android:id="@+id/buttonMultiply"
                android:backgroundTint="@color/teal_200"
                android:text="*"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onOperator"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button1"
                android:text="1"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/button2"
                android:text="2"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/button3"
                android:text="3"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />

            <Button
                android:id="@+id/buttonSub"
                android:backgroundTint="@color/teal_200"
                android:text="-"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onOperator"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDot"
                android:text="."
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDecimalPoint"
                />

            <Button
                android:id="@+id/button0"
                android:text="0"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onDigit"
                />

            <Button
                android:id="@+id/buttonClr"
                android:text="CLEAR"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onClear"
                />

            <Button
                android:id="@+id/buttonPlus"
                android:text="+"
                android:backgroundTint="@color/teal_200"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onOperator"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:backgroundTint="@color/teal_200"
                android:id="@+id/buttonEqual"
                android:text="="
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="2dp"
                android:onClick="onEqual"
                />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
